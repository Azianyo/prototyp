


jQuery(document).ready(function() {
    var offset = 100;
    var duration = 500;
    jQuery(window).scroll(function() {
        if (jQuery(this).scrollTop() > offset) {
            jQuery('.return-to-top').fadeIn(duration);
        } else {
            jQuery('.return-to-top').fadeOut(duration);
        }
    });

    jQuery('.return-to-top').click(function(event) {
        event.preventDefault();
        jQuery('html, body').animate({scrollTop: 0}, duration);
        return false;
    });

    $('.location-filter').click( function() {
        $('.photo-and-patients-info').hide();
        $('.' + ($(this).data('bodypart'))).show();
        switch($(this).data('bodypart')) {
            case "lower_limbs":
                $('.choose').hide();
                $('#choose-loc-lowerlimbs').show();
                break;
            case "upper_limbs":
                $('.choose').hide();
                $('#choose-loc-upperlimbs').show();
                break;
            case "acral":
                $('.choose').hide();
                $('#choose-loc-acral').show();
                break;
            case "back":
                $('.choose').hide();
                $('#choose-loc-back').show();
                break;
            case "abdomen":
                $('.choose').hide();
                $('#choose-loc-abdomen').show();
                break;
            case "head-neck":
                $('.choose').hide();
                $('#choose-loc-headneck').show();
                break;
            case "chest":
                $('.choose').hide();
                $('#choose-loc-chest').show();
                break;
        }
        });

    $('#remove-filter').click( function() {
        $('.photo-and-patients-info').show();
        $('.choose').hide();
        $('#choose-loc-all').show();
    });

    $('.difficulty-filter').click( function() {
        $('.photo-and-patients-info').hide();
        $('.'+($(this).attr('what'))).show();
    });

    $('.dropdown-toggle').dropdown()

 });
