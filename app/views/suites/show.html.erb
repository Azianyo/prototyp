<%=form_tag ('/replies/submit') do %>
  <%=hidden_field_tag "photo_id","#{@photo.id}"%>
  <%@questions.each do |question|%>
    <%=question.content%></br>

    <ul>
      <%question.answers.where(:photo_id => @photo.id).each do |answer|%>
        <li>
          <%= radio_button_tag "answer[#{question.id}]","#{answer.id}" %>
          <%= answer.content %>
        </li>
      <%end%>
    </ul>
  <%end%>
  <%= submit_tag ("Submit")%>
<%end%>
