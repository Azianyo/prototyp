<%=form_tag ('/replies/submit') do %>
  <%@questions.each do |question|%>
    <%=question.content%></br>

    <ul>
      <%question.answers.each do |answer|%>
        <li>
          <%= radio_button_tag "answer[#{question.id}]","#{answer.id}" %>
          <%= answer.content %>
        </li>
      <%end%>
    </ul>

  <%end%>
  <%= submit_tag ("Submit")%>
<%end%>
